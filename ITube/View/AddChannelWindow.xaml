<Window x:Class="ITube.View.AddChannel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITube.View"
        mc:Ignorable="d"
        Title="Добавить канал" Height="110" Width="425">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="81*"/>
			<ColumnDefinition Width="241*"/>
			<ColumnDefinition Width="78*"/>
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="1">
			<Label Content="Введи ссылку на канал без youtube.com"/>
			<TextBox Name ="tbUrl"/>
			<Button Content="Добавить" Click="ButtonBase_OnClick"/>
		</StackPanel>
	</Grid>
</Window>